		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@zaplink/api": "workspace:*",
		"@zaplink/auth": "workspace:*",
		"@zaplink/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "catalog:",
		"@types/bun": "^1.2.6",
		"tsdown": "catalog:"
	}
}
