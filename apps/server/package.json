{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"elysia": "^1.3.21",
		"@elysiajs/cors": "^1.3.3",
		"@trpc/server": "^11.5.0",
		"@elysiajs/trpc": "^1.1.0",
		"better-auth": "^1.3.28",
		"dotenv": "^17.2.2",
		"zod": "^4.1.11",
		"@zaplink/api": "workspace:*",
		"@zaplink/auth": "workspace:*",
		"@zaplink/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.15.5"
	}
}
